<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_gen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--先写主背景-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/titleRelative"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#F44336"
            android:gravity="center_vertical"
            >

            <ImageView
                android:id="@+id/ce_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:src="@drawable/a_b" />

            <RadioGroup
                android:id="@+id/radio_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal"
                android:padding="3dp">

                <RadioButton
                    android:id="@+id/btn_01"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@null"
                    android:checked="true"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="我的音乐"
                    android:textColor="@drawable/textcolor"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/btn_02"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:button="@null"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="在线音乐"
                    android:textColor="@drawable/textcolor"
                    android:textSize="18sp" />
            </RadioGroup>

            <ImageView
                android:id="@+id/search"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/a_6" />
        </RelativeLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/manage_viewpager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6" />

        <include
            android:background="#fff"
            layout="@layout/include_d"
            android:id="@+id/inc"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            />
        <!--注释掉的自己布局-->
        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/bottomRelative"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:background="#fff"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
        android:layout_weight="1">

            <LinearLayout
                android:layout_centerVertical="true"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/wuyinyue"
                android:layout_width="80dp"
                android:layout_height="80dp" />

            <LinearLayout
                android:layout_marginLeft="20dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:text="女人花"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <TextView
                    android:textSize="17sp"
                    android:layout_marginTop="9dp"
                    android:text="梅艳芳"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
            </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/music_bofang"
                    android:layout_width="60dp"
                    android:layout_height="60dp" />

                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="25dp"
                    android:src="@drawable/music_next_red"
                    android:layout_width="35dp"
                    android:layout_height="35dp" />

            </LinearLayout>

    </RelativeLayout>
    </LinearLayout>

    <!-- 侧滑页面的布局-->
    <LinearLayout
        android:id="@+id/linear_cemian"
        android:layout_width="360dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:background="#ffffff"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:background="#F44336">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FAFAFA"
            android:orientation="vertical"
            android:paddingLeft="20dp">

            <TextView
                android:id="@+id/gongneng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:drawableLeft="@drawable/afd"
                android:text="       功能设置"
                android:textColor="#383838"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/night"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:drawableLeft="@drawable/afd"
                android:text="       夜间模式"
                android:textColor="#383838"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/timestop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:drawableLeft="@drawable/afd"
                android:text="       定时停止播放"
                android:textColor="#383838"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tuichu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:drawableLeft="@drawable/afd"
                android:text="       退出应用"
                android:textColor="#383838"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/guanyu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:drawableLeft="@drawable/afd"
                android:text="关于伯尼音乐"
                android:textColor="#383838"
                android:textSize="18sp" />
        </LinearLayout>

    </LinearLayout>


</android.support.v4.widget.DrawerLayout>
